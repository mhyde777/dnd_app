# initiative_tracker.kv

<InitiativeTracker>:
    GridLayout:
        cols: 2
        
        TreeView:
            id: tree
            columns: ['Name', 'Init', 'Max HP', 'Cur HP', 'AC', 'M', 'A', 'BA', 'R', 'OI']
            hide_root: True
            select_mode: 'browse'
            size_hint_x: 0.7
            
            TreeViewLabel:
                text: 'Name'
                is_open: True
            TreeViewLabel:
                text: 'Init'
            TreeViewLabel:
                text: 'Max HP'
            TreeViewLabel:
                text: 'Cur HP'
            TreeViewLabel:
                text: 'AC'
            TreeViewLabel:
                text: 'M'
            TreeViewLabel:
                text: 'A'
            TreeViewLabel:
                text: 'BA'
            TreeViewLabel:
                text: 'R'
            TreeViewLabel:
                text: 'OI'
            
            MyButton:
                text: 'Next'
                on_release: root.next_turn()
            MyButton:
                text: 'Prev'
                on_release: root.prev_turn()

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            
            Label:
                id: active_initiative_label
                text: 'Active: '
                font_size: 16
            
            Label:
                id: round_counter_label
                text: 'Round: 1'
                font_size: 16
            
            Label:
                id: time_counter_label
                text: 'Time: 0 seconds'
                font_size: 16
            
            MyButton:
                text: 'Add Character'
                on_release: root.add_character()
            
            GridLayout:
                cols: 2
                padding: 10
                
                MyButton:
                    text: 'Action'
                    on_release: root.toggle_status('A')
                MyButton:
                    text: 'Bonus Action'
                    on_release: root.toggle_status('BA')
                MyButton:
                    text: 'Reaction'
                    on_release: root.toggle_status('R')
                MyButton:
                    text: 'Object Interaction'
                    on_release: root.toggle_status('OI')

<MyButton@Button>:
    size_hint_y: None
    height: '48dp'

<TreeViewLabel@Label>:
    text: ''
    size_hint_x: None
    width: '100dp'
    font_size: 16
    color: 0, 0, 0, 1
